<br>
<h2 style="color: green">Comments:</h2>
<hr>
<% @article.comments.each do |cmt| %>
  <p>
    <strong>Commenter:</strong>
    <%= cmt.commenter %>
  </p>
  <p><%= cmt.created_at %></p>
  <p>
    <strong>Comment:</strong>
    <%= cmt.body %>
  </p>
<% if current_user && current_user.admin? %>
  <p><%= link_to('Delete Comment', [cmt.article, cmt],
                 class: 'btn btn-md btn-danger',
                 method: :delete,
                 data: { confirm: 'Are you Certain???' }) %></p>
<% end %>
  <hr>
<% end %>
