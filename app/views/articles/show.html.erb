<div class="row"></div>
<div class="col"></div>
<div class="col-md-7">
  <%= image_tag('trajan.png', style: 'width:100%; height: 80%') %>
  <p>
    <h2>TITLE: </h2>
    <strong><%= @article.title %></strong>
  </p>
  <p>
    <%= @article.created_at.strftime('%A %-b %-d, %Y | %l:%M %p') %>
  </p>
  <p>
    <h3>ARTICLE: </h3>
    <%= @article.text %>
  </p>

  <hr>
  <%= render 'comments/comment' %>

  <% if current_user %>
    <hr>
    <%= render 'comments/form' %>
  <% else %>
    Please <%= link_to('Sign In', new_session_path) %> or <%= link_to('Sign Up', new_user_path) %> to create a comment
  <% end %>

  <br>
  <p>
    <%= link_to('Back', articles_path, class: 'btn btn-md btn-info') %>
    <%= link_to('Home', welcome_index_path, class: 'btn btn-md btn-primary') %>
  </p>
</div>
<div class="row"></div>
<div class="col"></div>
