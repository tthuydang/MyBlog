<p>
  <strong>Title: </strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text: </strong>
  <%= @article.text %>
</p>

<hr>
<h2>Comments</h2>
<% @article.comments.each do |cmt| %>
  <p>
    <strong>Commenter:</strong>
    <%= cmt.commenter %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= cmt.body %>
  </p>
  <p><%= link_to('Delete Comment', [cmt.article, cmt],
                 method: :delete,
                 data: { confirm: 'Are you Certain???' }) %></p>
<% end %>

<hr>
<h2>Add Comment</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %> <br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p><%= link_to('Back', articles_path) %> | <%= link_to('Home', welcome_index_path) %></p>
